class Solution {
public:
    int winner(int n,int k){
        if(n==1)//base case
          return 0;//no one is winner

        int ans=(winner(n-1,k)+k)%n;
          return ans;
    }
    int findTheWinner(int n, int k) {
        //O(n)
        return winner(n,k)+1;

        //O(n^2)
        // vector<bool>counted(n,0);
        // int eliminated=0;
        // int count=0;
        // int i=0;
        // while(eliminated!=n-1){
        //     if(counted[i]!=1)
        //       count++;
        //     if(count==k){
        //         counted[i]=1;
        //         count=0;
        //         eliminated++;
        //     }
        //     i=(i+1)%n;
        // }
        // for(int i=0;i<counted.size();i++){
        //     if(counted[i]==0)
        //       return i+1;
        // }
        // return 0;
    }
};
