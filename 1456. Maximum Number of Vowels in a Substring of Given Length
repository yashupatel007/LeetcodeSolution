class Solution {
public:
  bool vowel(char v){
    if(v=='a'||v=='e'||v=='i'||v=='o'||v=='u')
       return 1;
    
    return 0;
  }
    int maxVowels(string s, int k) {
        int count=0;
        for(int i=0;i<k;i++){
            if(vowel(s[i])==1){
               count++; //store the count of first k elements
            }
        }

        int new_count=count;// store it new variable as count reset
        int start=0;
        int temp=k;
        while(temp<=s.size()-1){
            if(vowel(s[start])==1) 
              count=count-1; // remove 1st element
    
            if(vowel(s[temp])==1)
              count++;//add next element

            new_count=max(new_count,count);//store max count
            start++;
            temp++;
        }
        return new_count;
    }
};
