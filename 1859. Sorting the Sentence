class Solution {
public:
    string sortSentence(string s) {
        vector<string>ans(10); // create a string vector
        string temp;
        int count=0;
        int pos=0;
        for(int i=0;i<s.size();i++){ // iterate the whole string
            if(s[i]==' '){
                pos=temp[temp.size()-1]-'0';
                temp.pop_back();
                ans[pos]=temp;
                temp.clear();
                count++;

            }
            else 
                temp+=s[i];
        }
            // for last word to store
                pos=temp[temp.size()-1]-'0';
                temp.pop_back();
                ans[pos]=temp;
                temp.clear();
                count++;
        for(int i=1;i<=count;i++){
            temp+=ans[i];// make sentence
            temp+=" ";
        }
        temp.pop_back();// remove last space
        return temp;

    }
};
