class Solution {
public:
    void combination(vector<int>& candidates,vector<vector<int>>&ans,int index,int target,vector<int>&temp)
    {
        if(target==0)
        {
            ans.push_back(temp);
            return;
        }
        if(index==candidates.size() || target<0)
          return;
        for(int i=index;i<candidates.size();i++)
        {
           
            temp.push_back(candidates[i]);
            combination(candidates,ans,i,target-candidates[i],temp);
            temp.pop_back();
        }
    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>>ans;
        vector<int>temp;
        int index=0;
        combination(candidates,ans,index,target,temp);
        return ans;
    }
};
