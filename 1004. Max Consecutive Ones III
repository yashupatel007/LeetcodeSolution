class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int zcount=0;
        int l=0;
        int r=0;
        int len=INT_MIN;
        while(r<nums.size())
        {
          if(nums[r]==0)
          {
            zcount++;
        
          }
           while(zcount>k)
           {
            if(nums[l]==0)
              zcount--;
             
            l++;
           }
           len=max(len,r-l+1);
           r++;
        }
        if(len==INT_MIN)
          return 0;
        return len;
    }
};
//tc=O(n)
//sc=O(1)
