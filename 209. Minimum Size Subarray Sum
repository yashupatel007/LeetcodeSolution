class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int left=0;
        int right=0;
        int len=INT_MAX;
        int sum=0;
        while(right<nums.size() )//jab tak sum <than target keep adding right
        {
             sum+=nums[right];
            while(sum>=target)//jab tak sum>target keep subs left
            {
                len=min(len,right-left+1);//updae len
                sum-=nums[left];
                left++;
            }
            right++;   
        }
      if(len==INT_MAX)//no one found
        return 0;
        return len;
        
    }
};
