class Solution {
public:
    int minRemoval(vector<int>& nums, int k) {
        sort(nums.begin(),nums.end());//sort the array to find min & max
        int n=nums.size();
        int left=0;
        int right=0;
        int count=0;
        while(right<n)
        {
            long long max_value=(long long) nums[left]*k;//check limit i.e.min*k
            if(nums[right]<=max_value)
            {
                count=max(count,right-left+1);//check valid window size
                right++;
            }
            else
            {
                left++;//otherwise move 1 to find new min
            }
        }
        return n-count;//invalid=size-valid
    }
};
