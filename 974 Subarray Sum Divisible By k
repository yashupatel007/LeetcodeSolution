class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
         unordered_map<int,int>count;
         count[0]=1;

         int prefixsum=0;
         int result=0;

         for(int i=0;i<nums.size();i++){
             prefixsum+=nums[i];
        
        int rem=((prefixsum%k)+k)%k;

        if(count.find(rem)!=count.end()){
            result+=count[rem];
        }
        count[rem]++;
         }
         return result;
    }   
};
