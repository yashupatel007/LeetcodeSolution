class Solution {
public:
    void combination(vector<int>& candidates,int target,vector<vector<int>>& ans,vector<int>& path,
                     int index)
    {
        if(target==0)
        {
            ans.push_back(path);
            return;
        }
        if(index==candidates.size() || target<0)
          return;

      
        for(int i=index;i<candidates.size();i++)
        {
            if(i > index && candidates[i]==candidates[i-1])
             continue;
            if(candidates[i]>target)//stop for checking too long
              break;
            path.push_back(candidates[i]);
            combination(candidates,target-candidates[i],ans,path,i+1);
            path.pop_back();
        }
      
    }
    vector<vector<int>> combinationSum2(vector<int>& candidates, int target) {
        sort(candidates.begin(),candidates.end());
        vector<vector<int>>ans;
        vector<int>path;
        int index=0;
        combination(candidates,target,ans,path,index);
        return ans;
    }
};
