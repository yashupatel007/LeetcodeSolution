class Solution {
public:
    int countNegatives(vector<vector<int>>& grid) {
        // Row 0:   4    3    2   -1
        // Row 1:   3    2    1   -1
        // Row 2:   1    1   -1   -2
        // Row 3:  -1   -1   -2   -3
        
     
        int count=0;
        int row = grid.size();
        int col = grid[0].size();
        int i=row-1;
        int j=0;

        while(i>=0 && j<col){
            if(grid[i][j]<0){
              count+=(col-j);
              i--;
            }
            else {
                j++;
            }
        }
        return count;
    }
};
