class Solution {
public:
    vector<int> maxSlidingWindow(vector<int>& nums, int k) {
        vector<int>ans;
        deque<int>dq;
        int n=nums.size();
        //check for 1st window
        for(int i=0;i<k;i++)
        {
           while(!dq.empty() && nums[i]>=nums[dq.back()])//agar dq empty nhi hai & nums >dq ka last
           {
                dq.pop_back();//remove all
           }
           dq.push_back(i);//indert it dq
        }
        //update ans for 1st window
        ans.push_back(nums[dq.front()]);
        //check for rest part
        for(int i=k;i<n;i++)
        {
             if(!dq.empty() && dq.front() == i - k) { //if dq size >k
                dq.pop_front();
            }
             while(!dq.empty() && nums[i]>=nums[dq.back()])
           {
                dq.pop_back();
           }
           dq.push_back(i);

            ans.push_back(nums[dq.front()]);
        }
        return ans;
    }
};
