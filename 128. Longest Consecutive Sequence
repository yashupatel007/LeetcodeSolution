class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int count=0;
        int res=0;
        set<int>st; //make set and store element without duplicate
        for(int i=0;i<nums.size();i++){
            st.insert(nums[i]);
        }
       
        if(st.size()<=1) //agar 0 ya 1 size hai to wahi seq hai
           return st.size();

         int prev=*st.begin();//store 1st element in prev

        for(auto i:st){
        int current=i;

          if(current==prev+1){ // check curr element to prev+1
            count++;
            res=max(res,count);
          }
          else{
            
            count=0;//reset the count
          }

          prev=current;//prev update karo
        }
       return res+1;
        
    }
};
