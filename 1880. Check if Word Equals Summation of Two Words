class Solution {
public:
    bool isSumEqual(string firstWord, string secondWord, string targetWord) {
        int n=firstWord.size();
        int m=secondWord.size();
        int o=targetWord.size();
        string first;
        string second;
        string target;
        for(int i=0;i<n;i++){
            first+=(firstWord[i]-'a')+'0';
        }
        for(int j=0;j<m;j++){
            second+=(secondWord[j]-'a')+'0';
        }
        for(int k=0;k<o;k++){
            target+=(targetWord[k]-'a')+'0';
        }

        long long f=stoi(first);
        long long s=stoi(second);
        long long t=stoi(target);
        if(f+s==t)
          return true;

        return false;
    }
};
