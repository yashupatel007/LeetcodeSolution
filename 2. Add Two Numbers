/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
       ListNode* dumynode=new ListNode(-1); // make dumy node
       int carry=0;
       ListNode* curr=dumynode;
       ListNode* t1=l1; //node pointers
       ListNode* t2=l2;
       
       while(t1!=NULL || t2!=NULL){
        int sum=carry; // place sum here to reset
        if(t1) sum+=t1->val; //add carry+value of t1
        if(t2) sum+=t2->val; // add carry+val(t1)+val(t2)
        ListNode* newNode=new ListNode(sum%10); //store in newNode
        carry=sum/10;
        curr->next=newNode; //point to next node
        curr=curr->next; //move pointer to next node

        if(t1) t1=t1->next; //move t1 & t2
        if(t2) t2=t2->next;

       }
       if(carry){ //agar carry bachi hai to store karo
        ListNode* newNode=new ListNode(carry);
        curr->next=newNode;
       }
       return dumynode->next;
    }
};
