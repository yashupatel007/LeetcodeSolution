class Solution {
public:
    int findDuplicate(vector<int>& nums) {
        // use slow-fast pointer approach
        int slow=nums[0];
        int fast=nums[0];
       // move slow to +1 & fast to +2
        do{
            slow=nums[slow]; // move step 1
            fast=nums[nums[fast]]; // move step 2

        } while(slow!=fast);
        slow=nums[0]; // reset slow to 0 index value

        // now move +1 both
        while(slow!=fast){
            slow=nums[slow];
            fast=nums[fast];

        }
        return slow;
    }
};
